{% extends 'templates/admin.twig' %}

{% block content %}

	<div class="container">
		<div class="card">
	        <div class="card-header">
	            <h2>Add New Admin <small>To add a new admin please fill in the form below. Be aware another admin will be able to manage all of your content. Please be carefull.</small></h2>
	        </div>
	        
	        <div class="card-body card-padding">
	            <form role="form" method="post" action="{{ path_for('auth.signup') }}">
	                <div class="form-group fg-line {{ errors.email ? 'has-error' : '' }}">
	                    <label for="email">Email</label>
	                    <input type="email" name="email" class="form-control input-sm" placeholder="email@domain.com" value="{{ old.email }}">
	                    {% if errors.email %}
	                        <span class="help-block">{{ errors.email | first }}</span>
	                    {% endif %}
	                </div>
	                <div class="form-group fg-line {{ errors.name ? 'has-error' : '' }}">
	                    <label for="name">User name</label>
	                    <input type="name" name="name" class="form-control input-sm" placeholder="John" value="{{ old.name }}">
	                    {% if errors.name %}
	                        <span class="help-block">{{ errors.name | first }}</span>
	                    {% endif %}
	                </div>
	                <div class="form-group fg-line {{ errors.password ? 'has-error' : '' }}">
	                    <label for="password">Password</label>
	                    <input type="password" name="password" class="form-control input-sm" placeholder="Password">
	                    {% if errors.password %}
	                        <span class="help-block">{{ errors.password | first }}</span>
	                    {% endif %}
	                </div>
	                <div class="form-group fg-line {{ errors.repeat_password ? 'has-error' : '' }}">
	                    <label for="repeat_password">Repeat password</label>
	                    <input type="password" name="repeat_password" class="form-control input-sm" placeholder="Repeat Password">
	                    {% if errors.repeat_password %}
	                        <span class="help-block">{{ errors.repeat_password | first }}</span>
	                    {% endif %}
	                </div>

	                {{ csrf.field | raw }}

	                
	                <button type="submit" class="btn btn-primary btn-sm m-t-10">Add Admin</button>
	            </form>
	        </div>
	    </div>
	</div>

{% endblock %}