{% extends 'templates/admin.twig' %}

{% block content %}

	<div class="container">

		<div class="card">
	        <div class="card-header">
	            <h2>Add categories <small>You can add more categories by filling in the form.</small></h2>
	        </div>
	        
	        <div class="card-body card-padding">
	            <form role="form" method="post" action="{{ path_for('admin.content.other.category') }}">
	                <div class="form-group fg-line {{ errors.name ? 'has-error' : '' }}">
	                    <label for="name">Add category</label>
	                    <input type="text" name="name" class="form-control input-sm" placeholder="Category">
	                    {% if errors.name %}
	                        <span class="help-block">{{ errors.name | first }}</span>
	                    {% endif %}
	                </div>

	                {{ csrf.field | raw }}

	                
	                <button type="submit" class="btn btn-primary btn-sm m-t-10">Add new category</button>
	            </form>
	        </div>

	        <div class="card-body card-padding">
	            <form role="form" method="post" action="{{ path_for('admin.content.other.cv') }}">
	                <div class="form-group">
	                	<label for="file">Cv</label><br>
	                	<input data-crop="" type="hidden" name="cv_file" id="file" role="uploadcare-uploader" />
	                </div>

	                {{ csrf.field | raw }}

	                
	                <button type="submit" class="btn btn-primary btn-sm m-t-10">Add new cv</button>
	            </form>
	        </div>
	    </div>

	</div>

{% endblock %}