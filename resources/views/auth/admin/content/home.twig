{% extends 'templates/admin.twig' %}

{% block content %}

	<div class="container">

		<div class="card">

	        <div class="card-header">
	            <h2>Manage slides <small>You can add more slides by filling in the form only four will be shown.</small></h2>
	        </div>
	        
	        <div class="card-body card-padding">
	            <form role="form" method="post" action="{{ path_for('admin.content.slide.add') }}">
	                <div class="form-group fg-line {{ errors.intro ? 'has-error' : '' }}">
	                    <label for="intro">Intro</label>
	                    <input type="text" name="intro" class="form-control input-sm" placeholder="Title" value="{{ old.intro }}">
	                    {% if errors.intro %}
	                        <span class="help-block">{{ errors.intro | first }}</span>
	                    {% endif %}
	                </div>
	                <div class="form-group fg-line {{ errors.slide_content ? 'has-error' : '' }}">
	                    <label for="slide_content">Content</label>
	                    <input type="text" name="slide_content" class="form-control input-sm" placeholder="Small message max 255 characters" value="{{ old.slide_content }}">
	                    {% if errors.slide_content %}
	                        <span class="help-block">{{ errors.slide_content | first }}</span>
	                    {% endif %}
	                </div>
	                <div class="form-group">
                        <label for="file">Image</label><br>
                        <input data-crop="" type="hidden" name="slide_image" id="file" role="uploadcare-uploader" />
                    </div>

	                {{ csrf.field | raw }}

	                
	                <button type="submit" class="btn btn-primary btn-sm m-t-10">Add new slide</button>
	            </form>
	        </div>

			<div class="card-body card-padding">
				<table id="slide-data-table-command" class="table table-striped table-vmiddle">
	                <thead>
	                    <tr>
	                        <th data-column-id="id" data-type="numeric" data-order="desc">ID</th>
	                        <th data-column-id="intro">Intro</th>
	                        <th data-column-id="content">Content</th>
	                        <th data-column-id="commands" data-formatter="commands" data-sortable="false">Commands</th>
	                    </tr>
	                </thead>
	                <tbody>
	                    {% for slide in slides %}
							<tr>
								<td>{{ slide.slide_id }}</td>
								<td>{{ slide.slide_intro }}</td>
								<td>{{ slide.slide_content }}</td>
							</tr>
	                    {% endfor %}
	                </tbody>
	            </table>
	        </div>

	    </div>

	    <div class="card">
	        <div class="card-header">
	            <h2>Manage testimonials <small>You can add more testimonials by filling in the form only one will be shown.</small></h2>
	        </div>
	        
	        <div class="card-body card-padding">
	            <form role="form" method="post" action="{{ path_for('admin.content.testimonial.add') }}">
	                <div class="form-group fg-line {{ errors.author ? 'has-error' : '' }}">
	                    <label for="author">Author</label>
	                    <input type="text" name="author" class="form-control input-sm" placeholder="John Doe" value="{{ old.author }}">
	                    {% if errors.author %}
	                        <span class="help-block">{{ errors.author | first }}</span>
	                    {% endif %}
	                </div>
	                <div class="form-group fg-line {{ errors.testimonial_content ? 'has-error' : '' }}">
	                    <label for="testimonial_content">Content</label>
	                    <input type="text" name="testimonial_content" class="form-control input-sm" placeholder="Small message max 255 characters" value="{{ old.testimonial_content }}">
	                    {% if errors.testimonial_content %}
	                        <span class="help-block">{{ errors.testimonial_content | first }}</span>
	                    {% endif %}
	                </div>
	                <div class="form-group">
	                	<label for="file">Image</label><br>
	                	<input data-crop="" type="hidden" name="testimonial_image" id="file" role="uploadcare-uploader" />
	                </div>

	                {{ csrf.field | raw }}

	                
	                <button type="submit" class="btn btn-primary btn-sm m-t-10">Add new testimonial</button>
	            </form>
	        </div>

			<div class="card-body card-padding">
				<table id="testimonial-data-table-command" class="table table-striped table-vmiddle">
	                <thead>
	                    <tr>
	                        <th data-column-id="id" data-type="numeric" data-order="desc">ID</th>
	                        <th data-column-id="author">Author</th>
	                        <th data-column-id="content">Content</th>
	                        <th data-column-id="commands" data-formatter="commands" data-sortable="false">Commands</th>
	                    </tr>
	                </thead>
	                <tbody>
	                    {% for testimonial in testimonials %}
							<tr>
								<td>{{ testimonial.testimonial_id }}</td>
								<td>{{ testimonial.testimonial_author }}</td>
								<td>{{ testimonial.testimonial_content }}</td>
							</tr>
	                    {% endfor %}
	                </tbody>
	            </table>
	        </div>

	    </div>

	</div>

{% endblock %}