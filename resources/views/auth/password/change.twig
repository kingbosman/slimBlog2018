{% extends 'templates/admin.twig' %}

{% block content %}

	<div class="container">
		<div class="card">
	        <div class="card-header">
	            <h2>Change password <small>Fill in this form to change your password. Changes will be made to currently signed in account.</small></h2>
	        </div>
	        
	        <div class="card-body card-padding">
	            <form role="form" method="post" action="{{ path_for('auth.password.change') }}">
	                <div class="form-group fg-line {{ errors.password ? 'has-error' : '' }}">
	                    <label for="password">Current Password</label>
	                    <input type="password" name="password" class="form-control input-sm" placeholder="Password">
	                    {% if errors.password %}
	                        <span class="help-block">{{ errors.password | first }}</span>
	                    {% endif %}
	                </div>
	                <div class="form-group fg-line {{ errors.new_password ? 'has-error' : '' }}">
	                    <label for="new_password">New password</label>
	                    <input type="password" name="new_password" class="form-control input-sm" placeholder="Password">
	                    {% if errors.new_password %}
	                        <span class="help-block">{{ errors.new_password | first }}</span>
	                    {% endif %}
	                </div>
	                <div class="form-group fg-line {{ errors.repeat_new_password ? 'has-error' : '' }}">
	                    <label for="repeat_new_password">Repeat new password</label>
	                    <input type="password" name="repeat_new_password" class="form-control input-sm" placeholder="Password">
	                    {% if errors.repeat_new_password %}
	                        <span class="help-block">{{ errors.repeat_new_password | first }}</span>
	                    {% endif %}
	                </div>

	                {{ csrf.field | raw }}

	                
	                <button type="submit" class="btn btn-primary btn-sm m-t-10">Change password</button>
	            </form>
	        </div>
	    </div>
	</div>

{% endblock %}